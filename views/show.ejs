<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap"
      rel="stylesheet"
    />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/ev_logo.jpg">
    <title>PlugNGoX</title>
    <link rel="stylesheet" href="/CSS/Homestyle.css" />
    <!-- <link rel="stylesheet" href="/CSS/style.css" /> -->
    <link rel="stylesheet" href="/CSS/show.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("partials/navbar") %> <%- include("partials/flash.ejs") %>
    <div class="container mt-4">
      <div
        class="card mx-auto shadow-lg p-3 mb-5 bg-white rounded"
        style="width: 50rem"
      >
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="EV Station Image"
          style="border-radius: 2rem !important; height: 400px !important"
        />
        <div class="card-body">
          <h2 class="card-title"><%= listing.title %></h2>
          <p class="text-muted"><%= listing.city %>, <%= listing.state %></p>
          <p class="card-text"><%= listing.description %></p>
          <p>
            <b>Available Slots:</b>
            <span id="availableSlots"><%= listing.available_slots %></span>
          </p>
          <p><b>Total Slots:</b> <%= listing.total_slots %></p>

          <form id="bookingForm">
            <label for="slots">Select Number of Slots:</label>
            <input
              type="number"
              id="slots"
              name="slots"
              min="1"
              max="<%= listing.available_slots %>"
              class="form-control mb-3"
              placeholder="1"
            />

            <p>
              Price per Slot: ₹<span id="pricePerSlot"
                ><%= listing.price_per_slot %></span
              >
            </p>
            <p>
              <strong
                >Total Price: ₹<span id="totalPrice"
                  ><%= listing.price_per_slot %></span
                ></strong
              >
            </p>
            <button id="rzp-button1" class="btn btn-success btn-lg btn-block">
              Pay Now
            </button>
          </form>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const slotsInput = document.getElementById("slots");
        const totalPriceElement = document.getElementById("totalPrice");
        const pricePerSlot = parseFloat("<%= listing.price_per_slot %>"); // Convert to number
    
        slotsInput.addEventListener("input", function () {
          let slots = parseInt(this.value, 10) || 1; // Ensure at least 1 slot
          let maxSlots = parseInt(slotsInput.max, 10); // Get max slots from attribute
    
          // Restrict input within min and max range
          if (slots > maxSlots) {
            slots = maxSlots;
          } else if (slots < 1 || isNaN(slots)) {
            slots = 1;
          }
    
          this.value = slots; // Enforce correct input value
          totalPriceElement.innerText = slots * pricePerSlot; // Update total price
        });
    
        // Initialize total price on page load
        totalPriceElement.innerText = parseInt(slotsInput.value || 1, 10) * pricePerSlot;
      });
    </script>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
      document.getElementById("rzp-button1").onclick = async function (e) {
        e.preventDefault();

        let pricePerSlot = parseInt("<%= listing.price_per_slot %>"); // Fetch from database
        let slots = parseInt(document.getElementById("slots").value) || 1; // Get user-selected slot count
        let totalAmount = pricePerSlot * slots * 100; // Razorpay requires the amount in paise (multiply by 100)

        let response = await fetch("http://localhost:3000/payment", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            amount: totalAmount,
          }),
        });

        let orderData = await response.json();
        console.log(orderData);

        var options = {
          key: "rzp_test_fruguUDc8PALxa", // Enter the Key ID generated from the Dashboard
          amount: totalAmount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
          currency: "INR",
          name: "PlugNGoX",
          description: "EV Charging Station Booking",
          image: "/images/ev_logo.jpg",
          order_id: orderData.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
          handler: function (response) {
            alert(
              "Payment Successful!\nPayment ID: " + response.razorpay_payment_id
            );
            window.location.reload();
            // alert(response.razorpay_payment_id);
            // alert(response.razorpay_order_id);
            // alert(response.razorpay_signature)
          },
          theme: {
            color: "#2300a3",
          },
        };
        var rzp1 = new Razorpay(options);

        rzp1.open();
      };
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const slotsInput = document.getElementById("slots");
        const maxSlots = parseInt(slotsInput.max, 10); // Get the max value from the attribute
    
        slotsInput.addEventListener("input", function () {
          let value = parseInt(slotsInput.value, 10);
    
          if (value > maxSlots) {
            slotsInput.value = maxSlots; // Restrict input to maxSlots
          } else if (value < 1 || isNaN(value)) {
            slotsInput.value = 1; // Restrict input to min 1
          }
        });
      });
    </script>
  </body>
</html>
